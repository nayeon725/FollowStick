<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E332E"
    tools:ignore="MissingConstraints"
    tools:context=".settingGuideFPage">

    // 3. 환경설정 안내
    <TextView
        android:id="@+id/graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="3. 환경설정 안내"
        android:textSize="53dp"

        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"/>

    // 환경설정 안내 텍스트
    <TextView
        android:id="@+id/story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="어쩌구저쩌구"
        android:textSize="60dp"

        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graphic"
        app:layout_constraintBottom_toTopOf="@id/btConnbtn"/>

    // 블루투스 연결 버튼
    <Button
        android:id="@+id/btConnbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="블루투스 연결"
        android:textSize="45dp"

        android:textColor="@color/white"
        android:background="@drawable/btncss"
        android:layout_margin="10dp"
        android:padding="10dp"

        app:layout_constraintBottom_toTopOf="@id/ledbtn"
        app:layout_constraintTop_toBottomOf="@id/btConnbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    // LED ON/OFF 버튼
    <Button
        android:id="@+id/ledbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="LED ON/OFF"
        android:textSize="45dp"

        android:background="@drawable/btncss"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:padding="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btConnbtn"
        app:layout_constraintBottom_toTopOf="@id/backbtn"/>

    // 설명화면 바로가기 버튼
    <Button
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="설명화면\n바로가기"
        android:textSize="45dp"

        android:background="@drawable/btncss"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:padding="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ledbtn"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>